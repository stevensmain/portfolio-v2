---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import Projects from "../components/Projects.astro";
import Rrss from "../components/Rrss.astro";
import Mail from "../components/Mail.astro";
import Jobs from "../components/sections/Jobs";
---

<Layout title="Welcome to Astro.">
	<main class="px-8 md:px-24 lg:px-36">
		<Hero />
		<About />
		<Jobs client:only />
		<Projects />
		<Contact />
		<Rrss />
		<Mail />
		<Footer />
	</main>
	<style is:global>
		body {
			margin: 0;
		}
		main {
			margin: auto;
			scroll-bar: none;
		}
		body::-webkit-scrollbar,
		.scroll::-webkit-scrollbar {
			display: none;
		}
		.inline-link {
			color: var(--green);
			cursor: pointer;
		}
		.inline-link::after {
			content: "";
			display: block;
			width: 0px;
			height: 1px;
			position: relative;
			bottom: 0.1rem;
			background-color: var(--green);
			transition: all 300ms ease-in;
			opacity: 0.5;
		}
		.inline-link:hover::after {
			width: 100%;
		}
		.section-title {
			display: flex;
			align-items: baseline;
		}
		.ham-box {
			display: inline-block;
			position: relative;
			width: 40px;
			height: 24px;
		}
		.ham-box-inner {
			position: absolute;
			top: 50%;
			right: 0;
			width: 100%;
			height: 2px;
			border-radius: var(--border-radius);
			background-color: var(--green);
			transition-duration: 200ms;
			transition-property: transform;
			transition-delay: 0.12s;
			transition-timing-function: cubic-bezier(0.55, 0.055, 0.675, 0.19);
		}
		.ham-box-inner:before,
		.ham-box-inner:after {
			content: "";
			display: block;
			position: absolute;
			left: auto;
			right: 0;
			height: 2px;
			border-radius: 4px;
			background-color: var(--green);
			transition-timing-function: ease;
			transition-duration: 200ms;
			transition-property: transform;
		}
		.ham-box-inner:before {
			width: 120%;
			top: -10px;
			transition: all 200ms cubic-bezier(0.215, 0.61, 0.355, 1);
		}
		.ham-box-inner:after {
			width: 80%;
			bottom: -10px;
			transition: all 0.12s cubic-bezier(0.215, 0.61, 0.355, 1);
		}
		.ham-box-inner.active {
			transform: rotate(225deg);
			transition-duration: 500ms;
			transition-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
		}
		.ham-box-inner.active:before {
			width: 0;
			transition: all 200ms 0 cubic-bezier(0.215, 0.61, 0.355, 1);
		}
		.ham-box-inner.active:after {
			width: 100%;
			bottom: 0;
			transform: rotate(-90deg);
		}
		@media (min-width: 768px) {
			.section-title::after {
				content: "";
				background-color: var(--light-navy);
				display: inline-block;
				position: relative;
				height: 1px;
				margin-left: 10px;
				max-width: 300px;
				right: 0;
				top: -20%;
				width: -webkit-fill-available;
			}
		}
	</style>
</Layout>
<script>
	import AOS from "aos";
	import "aos/dist/aos.css";

	AOS.init({ duration: 500 });
	window.scrollTo({ top: 0, behavior: "smooth" });
</script>
